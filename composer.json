{
  "name": "contributte/nextras-orm-events",
  "description": "Doctrine-like events for Nextras ORM entity lifecycle",
  "keywords": ["nextras", "orm", "events", "lifecycle", "doctrine"],
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/contributte/nextras-orm-events",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 5.6",
    "nette/di": "~2.4.10",
    "nette/reflection": "~2.4.2",
    "nextras/orm": "^2.2.3 || ^3.0.1"
  },
  "require-dev": {
    "ninjify/qa": "^0.4.0",
    "ninjify/nunjuck": "^0.2.0",
    "mockery/mockery": "^0.9.9",
    "nette/caching": "~2.5.6"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Nextras\\Orm\\Events\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Fixtures\\": "tests/fixtures"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.8.5",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.8.3"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l 1 -c phpstan.neon src"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-develop": "0.3.x-dev"
    }
  }
}
